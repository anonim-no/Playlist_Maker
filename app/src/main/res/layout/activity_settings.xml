<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_from_top"
        android:layout_marginBottom="@dimen/margin_from_header"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_to_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:contentDescription="@string/back"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:tint="@color/text_color_primary" />

        <TextView
            style="@style/Header"
            android:layout_marginStart="28dp"
            android:text="@string/settings"
            android:textColor="@color/text_color_primary" />
    </LinearLayout>

    <Switch
        android:id="@+id/switch_dark_theme"
        style="@style/SettingsButtonText"
        android:paddingEnd="8dp"
        android:text="@string/dark_theme"
        android:thumbTint="@color/switch_color"
        android:trackTint="@color/switch_color"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/button_sharing"
        style="@style/SettingsButtonText"
        android:text="@string/share"
        app:icon="@drawable/ic_share" />

    <Button
        android:id="@+id/button_support"
        style="@style/SettingsButtonText"
        android:text="@string/support"
        app:icon="@drawable/ic_support" />

    <Button
        android:id="@+id/button_terms"
        style="@style/SettingsButtonText"
        android:text="@string/terms"
        app:icon="@drawable/ic_chevron_right" />
</LinearLayout>