<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/padding_horizontal"
    android:paddingVertical="@dimen/padding_vertical">

    <ImageView
        android:id="@+id/playListImage"
        android:layout_width="@dimen/track_art_size"
        android:layout_height="@dimen/track_art_size"
        android:layout_weight="0"
        android:contentDescription="@string/playlist_image"
        tools:src="@drawable/ic_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playListName"
            style="@style/SearchResultItem"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size"
            tools:text="Here Comes The Sun" />


        <TextView
            android:id="@+id/playListTracksCount"
            style="@style/SearchResultItem"
            tools:text="123 traks" />

    </LinearLayout>



</LinearLayout>